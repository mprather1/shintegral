

<table>
  <tr>
    <th>Name:</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>Username:</th>
    <td><%= @user.username %></td>
  

</table><br>

<h1>Tickets:</h1>
<% @user.tickets.each do |f| %>


  <table>

    <tr>
      <th>Description:</th>
      <td><%= f.description %></td>
    </tr>

    <tr>
      <th>ETA:</th>
      <td><%= f.estimated_time %></td>
    </tr>
  </table>

<% end %>
